% Colour namespace definitions
\colorlet{main-bg}{night-blue}
\colorlet{main-fg}{ruby-red}
\colorlet{support-primary}{sky-blue}
\colorlet{support-secondary}{ocean-blue}
\colorlet{support-tertiary}{aqua-teal}



\setbeamercolor{headline}{fg=main-fg, bg=main-bg}
\setbeamercolor{footline}{fg=main-fg, bg=main-fg}
\setbeamerfont{footline}{size=\large,series=\bf}
\setbeamercolor{separation line}{bg=main-bg!50}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}

\setbeamercolor{framesubtitle}{fg=main-fg, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=white, bg=main-bg}
\setbeamercolor{title in head/foot}{fg=main-fg, bg=main-fg}

\setbeamercolor*{normal text}{fg=grey-100, bg=white} % Main background colour
\setbeamercolor*{block body}{fg=white, bg=main-bg}
\setbeamercolor*{block title}{fg=white,bg=main-fg}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=main-fg}

\setbeamercolor*{example body}{fg=main-fg,bg=main-fg}
\setbeamercolor*{example text}{fg=main-fg,bg=main-fg}
\setbeamercolor*{example title}{bg=main-fg,fg=main-fg}

\setbeamercolor{alerted text}{fg=main-fg}
\setbeamercolor{structure}{fg=main-bg}

\setbeamertemplate{itemize items}{\color{main-fg}$\blacktriangleright$}
\setbeamertemplate{navigation symbols}{}
