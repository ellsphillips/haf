\newcommand{\refer}[2][\@nil]{%
	\def\tmp{#1}%
	\begingroup
		\bfseries\color{main-bg}%
		\ifx\tmp\@nnil
			\cref{#2}%
		\else%
			\hyperref[#2]{#1}%
		\fi%
	\endgroup
}
\makeatother



